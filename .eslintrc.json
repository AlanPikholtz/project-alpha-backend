{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "extends": ["eslint:recommended"],
  "env": {
    "node": true,
    "es2022": true
  },
  "rules": {
    // =========================================
    // üöÄ REGLAS B√ÅSICAS DE TYPESCRIPT
    // =========================================

    // ‚ùå Prohibir any expl√≠cito (b√°sico)
    "@typescript-eslint/no-explicit-any": "warn",

    // ‚ö†Ô∏è Variables no utilizadas
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],

    // ‚úÖ Preferir const
    "prefer-const": "error",

    // ‚úÖ No permitir var
    "no-var": "error",

    // ‚úÖ Usar template literals
    "prefer-template": "error",

    // =========================================
    // üõ°Ô∏è REGLAS DE SEGURIDAD B√ÅSICAS
    // =========================================

    // ‚ùå No usar eval
    "no-eval": "error",

    // ‚ö†Ô∏è Console warnings (no error)
    "no-console": "warn",

    // ‚ùå No usar debugger
    "no-debugger": "error",

    // =========================================
    // üö´ REGLAS DESHABILITADAS
    // =========================================

    // Deshabilitamos reglas de JS que TS ya maneja
    "no-undef": "off",
    "no-redeclare": "off"
  },

  "overrides": [
    {
      "files": ["**/*.schema.ts", "**/schemas.ts"],
      "rules": {
        "max-lines": "off"
      }
    },
    {
      "files": ["**/*.test.ts", "**/*.spec.ts"],
      "rules": {
        "@typescript-eslint/no-explicit-any": "off"
      }
    }
  ],

  "ignorePatterns": ["dist/", "node_modules/", "*.js", "coverage/"]
}
